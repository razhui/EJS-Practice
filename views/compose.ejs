<%- include("partials/header"); %>
<h1>Compose</h1>
<form class="form-group" action="/compose" method="POST">
    <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="composeTitle" autocomplete="off" autofocus>
            <label>Post</label>
            <textarea class="form-control" type="text" rows="6" name="composeBody" autocomplete="off"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>

